#include <iostream>
#include <string>

void addCharToString(char ch, std::string &str) { str += ch; }

int main() {
  char chr1 = 'a';
  char chr2 = 'b';
  char chr3 = 'c';
  std::string str;
  for (auto chr : {chr1, chr2, chr3})
    addCharToString(chr, str);
  std::cout << str << '\n';
  return 0;
}
